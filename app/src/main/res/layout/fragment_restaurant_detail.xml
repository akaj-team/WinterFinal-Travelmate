<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".navigationdrawer.RestaurantDetailFragment">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="280dp">

        <android.support.v4.view.ViewPager
                android:id="@+id/viewPagerSlideImage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"/>

        <me.relex.circleindicator.CircleIndicator
                android:id="@+id/circleIndicator"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"/>
        <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_alignParentBottom="true"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="30dp"
                android:textColor="@color/colorWhite"
                android:text="Banh cuon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <TextView
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30 Ngo Quyen"
                    android:textSize="18dp"
                    android:textColor="@color/colorBlack"/>

            <TextView
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3.5 hours total"
                    android:textSize="18dp"
                    android:textColor="@color/colorBlack"/>

            <TextView
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:drawableLeft="@drawable/ic_format_align_center_black_24dp"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 meal and Drinks"
                    android:textSize="18dp"
                    android:textColor="@color/colorBlack"/>

            <TextView
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:drawableLeft="@drawable/ic_chat_bubble_outline_black_24dp"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Offered in English"
                    android:textSize="18dp"
                    android:textColor="@color/colorBlack"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
